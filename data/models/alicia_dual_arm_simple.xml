                  <joint name="left_Joint6" axis="0 0 -1" range="-3.14 3.14" damping="0.01"/>
                  <geom type="box" size="0.03 0.025 0.06" rgba="0.3 0.3 0.8 1" pos="0 0 0.065"/>
                  <!-- 夹爪底座 -->
                  <geom type="box" size="0.015 0.015 0.015" rgba="0.3 0.3 0.8 1" pos="0 0 0.13"/>
                  <!-- 末端执行器参考点 -->
                  <geom size="0.008" rgba="0 1 0 1" pos="0 0 0.13118"/>
