                  <geom type="box" size="0.015 0.015 0.015" rgba="0.8 0.3 0.3 1" pos="0 0 0.13"/>
                  <!-- 末端执行器参考点 -->
                  <geom size="0.008" rgba="0 1 0 1" pos="0 0 0.13118"/>
                  <body name="right_Link7" pos="-0.0002 0.050502 0.13118" quat="0.707 -0.707 0 0">
