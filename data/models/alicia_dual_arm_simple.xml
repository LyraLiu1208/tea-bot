                    <joint name="right_right_finger" type="slide" axis="0 0 -1" range="0 0.05" damping="0.005"/>
                    <geom type="box" size="0.008 0.01 0.025" rgba="0.5 0.5 0.5 1" pos="0 0 0.025"/>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- 左臂执行器 -->
    <motor joint="left_Joint1" gear="100"/>
    <motor joint="left_Joint2" gear="100"/>
    <motor joint="left_Joint3" gear="100"/>
    <motor joint="left_Joint4" gear="100"/>
    <motor joint="left_Joint5" gear="100"/>
    <motor joint="left_Joint6" gear="100"/>
    <position joint="left_finger" kp="10"/>
    <position joint="left_right_finger" kp="10"/>

    <!-- 右臂执行器 -->
    <motor joint="right_Joint1" gear="100"/>
    <motor joint="right_Joint2" gear="100"/>
    <motor joint="right_Joint3" gear="100"/>
    <motor joint="right_Joint4" gear="100"/>
    <motor joint="right_Joint5" gear="100"/>
    <motor joint="right_Joint6" gear="100"/>
    <position joint="right_left_finger" kp="10"/>
    <position joint="right_right_finger" kp="10"/>
  </actuator>

  <contact>
    <!-- 左臂自碰撞排除 -->
    <exclude body1="left_base_link" body2="left_Link1"/>
    <exclude body1="left_Link1" body2="left_Link2"/>
    <exclude body1="left_Link2" body2="left_Link3"/>
    <exclude body1="left_Link3" body2="left_Link4"/>
    <exclude body1="left_Link4" body2="left_Link5"/>
    <exclude body1="left_Link5" body2="left_Link6"/>
    <exclude body1="left_Link6" body2="left_Link7"/>
    <exclude body1="left_Link6" body2="left_Link8"/>

    <!-- 右臂自碰撞排除 -->
