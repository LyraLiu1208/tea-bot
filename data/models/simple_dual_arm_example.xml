<!-- 简化的双臂机械臂示例模型（用于测试）-->
<!-- 这是一个简化版本，等待真实的 Alicia-D MJCF 模型后替换 -->

<mujoco model="simple_dual_arm">
  <compiler angle="radian"/>

  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <!-- 简单的几何体，无需外部 mesh -->
  </asset>

  <worldbody>
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
    <geom type="plane" size="2 2 0.1" rgba=".9 .9 .9 1"/>

    <!-- 左臂 -->
    <body name="left_base" pos="-0.3 0 0.1">
      <geom type="box" size="0.05 0.05 0.05" rgba="0.3 0.3 0.8 1"/>

      <!-- 关节 1 -->
      <joint name="left_joint1" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
      <body name="left_link1" pos="0 0 0.1">
        <geom type="capsule" size="0.02" fromto="0 0 0 0 0 0.15" rgba="0.3 0.3 0.8 1"/>

        <!-- 关节 2 -->
        <joint name="left_joint2" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
        <body name="left_link2" pos="0 0 0.15">
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 0.15" rgba="0.3 0.3 0.8 1"/>

          <!-- 关节 3 -->
          <joint name="left_joint3" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
          <body name="left_link3" pos="0 0 0.15">
            <geom type="capsule" size="0.015" fromto="0 0 0 0 0 0.12" rgba="0.3 0.3 0.8 1"/>

            <!-- 关节 4 -->
            <joint name="left_joint4" type="hinge" axis="1 0 0" range="-3.14 3.14"/>
            <body name="left_link4" pos="0 0 0.12">
              <geom type="capsule" size="0.015" fromto="0 0 0 0 0 0.10" rgba="0.3 0.3 0.8 1"/>

              <!-- 关节 5 -->
              <joint name="left_joint5" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
              <body name="left_link5" pos="0 0 0.10">
                <geom type="capsule" size="0.01" fromto="0 0 0 0 0 0.08" rgba="0.3 0.3 0.8 1"/>

                <!-- 关节 6 -->
                <joint name="left_joint6" type="hinge" axis="1 0 0" range="-3.14 3.14"/>
                <body name="left_end_effector" pos="0 0 0.08">
                  <geom type="box" size="0.02 0.02 0.01" rgba="0.8 0.3 0.3 1"/>

                  <!-- 夹爪 -->
                  <joint name="left_gripper" type="slide" axis="0 1 0" range="0 0.04"/>
                  <body name="left_finger1" pos="0 0.01 0">
                    <geom type="box" size="0.005 0.015 0.01" rgba="0.5 0.5 0.5 1"/>
                  </body>
                  <body name="left_finger2" pos="0 -0.01 0">
                    <geom type="box" size="0.005 0.015 0.01" rgba="0.5 0.5 0.5 1"/>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>

    <!-- 右臂（镜像左臂）-->
    <body name="right_base" pos="0.3 0 0.1">
      <geom type="box" size="0.05 0.05 0.05" rgba="0.8 0.3 0.3 1"/>

      <joint name="right_joint1" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
      <body name="right_link1" pos="0 0 0.1">
        <geom type="capsule" size="0.02" fromto="0 0 0 0 0 0.15" rgba="0.8 0.3 0.3 1"/>

        <joint name="right_joint2" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
        <body name="right_link2" pos="0 0 0.15">
          <geom type="capsule" size="0.02" fromto="0 0 0 0 0 0.15" rgba="0.8 0.3 0.3 1"/>

          <joint name="right_joint3" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
          <body name="right_link3" pos="0 0 0.15">
            <geom type="capsule" size="0.015" fromto="0 0 0 0 0 0.12" rgba="0.8 0.3 0.3 1"/>

            <joint name="right_joint4" type="hinge" axis="1 0 0" range="-3.14 3.14"/>
            <body name="right_link4" pos="0 0 0.12">
              <geom type="capsule" size="0.015" fromto="0 0 0 0 0 0.10" rgba="0.8 0.3 0.3 1"/>

              <joint name="right_joint5" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
              <body name="right_link5" pos="0 0 0.10">
                <geom type="capsule" size="0.01" fromto="0 0 0 0 0 0.08" rgba="0.8 0.3 0.3 1"/>

                <joint name="right_joint6" type="hinge" axis="1 0 0" range="-3.14 3.14"/>
                <body name="right_end_effector" pos="0 0 0.08">
                  <geom type="box" size="0.02 0.02 0.01" rgba="0.3 0.8 0.3 1"/>

                  <joint name="right_gripper" type="slide" axis="0 1 0" range="0 0.04"/>
                  <body name="right_finger1" pos="0 0.01 0">
                    <geom type="box" size="0.005 0.015 0.01" rgba="0.5 0.5 0.5 1"/>
                  </body>
                  <body name="right_finger2" pos="0 -0.01 0">
                    <geom type="box" size="0.005 0.015 0.01" rgba="0.5 0.5 0.5 1"/>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- 左臂执行器 -->
    <motor name="left_motor1" joint="left_joint1" gear="1"/>
    <motor name="left_motor2" joint="left_joint2" gear="1"/>
    <motor name="left_motor3" joint="left_joint3" gear="1"/>
    <motor name="left_motor4" joint="left_joint4" gear="1"/>
    <motor name="left_motor5" joint="left_joint5" gear="1"/>
    <motor name="left_motor6" joint="left_joint6" gear="1"/>
    <motor name="left_gripper_motor" joint="left_gripper" gear="1"/>

    <!-- 右臂执行器 -->
    <motor name="right_motor1" joint="right_joint1" gear="1"/>
    <motor name="right_motor2" joint="right_joint2" gear="1"/>
    <motor name="right_motor3" joint="right_joint3" gear="1"/>
    <motor name="right_motor4" joint="right_joint4" gear="1"/>
    <motor name="right_motor5" joint="right_joint5" gear="1"/>
    <motor name="right_motor6" joint="right_joint6" gear="1"/>
    <motor name="right_gripper_motor" joint="right_gripper" gear="1"/>
  </actuator>
</mujoco>
